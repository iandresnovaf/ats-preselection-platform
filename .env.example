# ============================================
# ATS Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ============================================

# Application Settings
DEBUG=false
ENVIRONMENT=development
APP_NAME="ATS Preselection Platform"
APP_VERSION="1.0.0"

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Format: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DATABASE
# IMPORTANT: Change the password placeholder to a secure password
DATABASE_URL=postgresql+asyncpg://postgres:CHANGE_ME_STRONG_PASSWORD@localhost:5432/ats_platform

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# ============================================
# SECURITY SETTINGS - CRITICAL!
# ============================================
# SECRET_KEY: Used for JWT token signing. MUST be kept secret!
# To generate: python scripts/generate_secrets.py
# Minimum 32 characters, use only alphanumeric and _-
SECRET_KEY=CHANGE_ME_GENERATE_USING_SCRIPTS

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Key (Fernet - 32 bytes base64 encoded)
# Auto-generated if not provided, but recommended to set explicitly
ENCRYPTION_KEY=

# ============================================
# DEFAULT ADMIN USER
# ============================================
# These credentials are used to create the initial admin user
# IMPORTANT: Change these before first run!
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com
DEFAULT_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_12_CHARS

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# In production, NEVER use '*' - specify exact domains
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ============================================
# EXTERNAL API KEYS
# ============================================
# OpenAI API Key (required for AI features)
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY_HERE

# ============================================
# WHATSAPP BUSINESS API (Optional)
# ============================================
# Set WHATSAPP_MOCK_MODE=true for development without real WhatsApp
WHATSAPP_ENABLED=true
WHATSAPP_MOCK_MODE=true
WHATSAPP_API_VERSION=v18.0
WHATSAPP_BUSINESS_ACCOUNT_ID=YOUR_BUSINESS_ACCOUNT_ID
WHATSAPP_PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID
WHATSAPP_ACCESS_TOKEN=YOUR_ACCESS_TOKEN
WHATSAPP_WEBHOOK_VERIFY_TOKEN=YOUR_WEBHOOK_VERIFY_TOKEN
WHATSAPP_APP_SECRET=YOUR_APP_SECRET

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ============================================
# LOGGING
# ============================================
# LOG_LEVEL=INFO
