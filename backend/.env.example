# Environment Configuration
DEBUG=false
APP_NAME="ATS Preselection Platform"
APP_VERSION="1.0.0"

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ats_platform
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=change-this-to-a-secure-random-string-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (32 bytes base64 encoded - auto-generated if not provided)
ENCRYPTION_KEY=

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Default Admin
DEFAULT_ADMIN_EMAIL=admin@topmanagement.com
DEFAULT_ADMIN_PASSWORD=ChangeMe123!

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# OpenAI (optional - can be configured via UI)
OPENAI_API_KEY=

# WhatsApp Business API (for development, use MOCK_MODE=true)
WHATSAPP_ENABLED=false
WHATSAPP_MOCK_MODE=true
WHATSAPP_API_VERSION=v18.0
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=
